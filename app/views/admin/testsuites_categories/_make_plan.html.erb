  <div id="week" style="display:none">
    <% ['日','一', '二','三', '四', '五', '六'].each_with_index do|e, i|  %>
      周<%= e %>
      <%= check_box_tag('regress_plan[wday][]',i.to_s, select_wday(@testsuite_category,i),:id => nil)%>
    <% end %>
  </div>
<script>
	if (<%=@testsuite_category.regress_plan && @testsuite_category.regress_plan["wday"]%>) {
		plannChecked();
	}
</script>
