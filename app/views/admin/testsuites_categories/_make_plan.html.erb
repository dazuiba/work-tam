  <%=label(:post, :title, "按周")%>
  <%= radio_button_tag("plann", "week",@testsuite_category.regress_plan && @testsuite_category.regress_plan["wday"],:onclick => "plannChecked()")  %>
  <%=label(:post, :title, "按天")%>
  <%= radio_button_tag("plann", "day",!(@testsuite_category.regress_plan && @testsuite_category.regress_plan["wday"]),:onclick => "plannUnChecked()") %>
